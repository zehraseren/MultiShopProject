@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Açıklama</th>
                                <th>Adress</th>
                                <th>Email Adresi</th>
                                <th>Telefon Numarası</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Description</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger btn-outline">Sil</a></td>
                                    <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success btn-outline">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <div class="d-flex justify-content-end mt-4 none-border">
                        <a href="/Admin/About/CreateAbout/" class="btn btn-primary btn-outline">Yeni Hakkımda Bilgisi Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>