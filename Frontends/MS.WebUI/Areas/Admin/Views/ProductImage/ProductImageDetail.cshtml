@model UpdateProductImageDto

@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Görselleri Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductImageId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Görsel 1</label>
                        <input type="text" class="form-control" asp-for="Image1" />
                        <br />
                        <label>Görsel 2</label>
                        <input type="text" class="form-control" asp-for="Image2" />
                        <br />
                        <label>Görsel 3</label>
                        <input type="text" class="form-control" asp-for="Image3" />
                        <br />
                        <label>Görsel 4</label>
                        <input type="text" class="form-control" asp-for="Image4" />
                        <br />
                        <div class="d-flex justify-content-end mt-4 none-border">
                            <button type="submit" class="btn btn-success btn-outline mr-3">Ürün Görsellerini Güncelle</button>
                            <a href="/Admin/Product/ProductListWithCategory/" class="btn btn-danger btn-outline mr-0">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>