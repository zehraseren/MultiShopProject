@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_IULayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">

        @await Component.InvokeAsync("_ProductDetailImageSliderComponentPartial", new { id = ViewBag.id })

        @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial", new { ViewBag.id })

    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">
                        "@localizer.GetKey("Ürün Detayı", typeof(DirectoryResources))"
                    </a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">
                        "@localizer.GetKey("Ürün Bilgileri", typeof(DirectoryResources))"
                    </a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">
                        "@localizer.GetKey("Yorumlar", typeof(DirectoryResources))"
                    </a>
                </div>
                <div class="tab-content">

                    @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial", new { ViewBag.id })

                    @await Component.InvokeAsync("_ProductDetailInformationComponentPartial", new { ViewBag.id })

                    @await Component.InvokeAsync("_ProductDetailReviewComponentPartial", new { ViewBag.id })

                </div>
            </div>
        </div>
    </div>
</div>
