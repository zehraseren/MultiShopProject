@{
    bool isDiscountCouponApplied = ViewBag.Coupon != null;
}

<div class="col-lg-4">
    <form class="mb-30" method="post" asp-controller="ShoppingCart" asp-action="ApplyCoupon">
        <div class="input-group">
            <input type="text" class="form-control border-0 p-4" placeholder="@localizer.GetKey("Kupon Kodu", typeof(ShoppingResources))" name="code">
            <div class="input-group-append">
                <button class="btn btn-primary">@localizer.GetKey("Kupon Uygula", typeof(ShoppingResources))</button>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">@localizer.GetKey("SİPARİŞ ÖZETİ", typeof(ShoppingResources))</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-1">
                <h6>@localizer.GetKey("Toplam Ürün Fiyatı", typeof(ShoppingResources))</h6>
                <h6>@ViewBag.total.ToString("N2") ₺</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">@localizer.GetKey("KDV Tutarı", typeof(ShoppingResources))</h6>
                <h6 class="font-weight-medium">@ViewBag.tax.ToString("N2") ₺</h6>
            </div>
            @if (isDiscountCouponApplied)
            {
                <div class="d-flex justify-content-between mb-1">
                    <h6 class="font-weight-medium">@localizer.GetKey("İndirim Oranı", typeof(ShoppingResources))</h6>
                    <h6 class="font-weight-medium">@ViewBag.Coupon%</h6>
                </div>
            }
            @if (isDiscountCouponApplied)
            {
                <div class="d-flex justify-content-between mb-1">
                    <h6 class="font-weight-medium">@localizer.GetKey("Toplam Tutar", typeof(ShoppingResources))</h6>
                    <h6 class="font-weight-medium">@ViewBag.totalWithTax.ToString("N2") ₺</h6>
                </div>
            }
        </div>
        <div class="pt-2">
            @if (isDiscountCouponApplied)
            {
                <div class="d-flex justify-content-between mt-2">
                    <h5>@localizer.GetKey("İndirimli Tutar", typeof(ShoppingResources))</h5>
                    <h5>@ViewBag.totalWithCoupon.ToString("N2")₺</h5>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between mb-1">
                    <h6 class="font-weight-medium">@localizer.GetKey("Toplam Tutar", typeof(ShoppingResources))</h6>
                    <h6 class="font-weight-medium">@ViewBag.totalWithTax.ToString("N2") ₺</h6>
                </div>
            }
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">@localizer.GetKey("Ödeme Adımına Geç", typeof(ShoppingResources))</button>
        </div>
    </div>
</div>