                    <a class="breadcrumb-item text-dark" href="#">@localizer.GetKey(ViewBag.directory2, typeof(SharedResources))</a>
                }
                <span class="breadcrumb-item active">@localizer.GetKey(ViewBag.directory3, typeof(SharedResources))</span>
            </nav>
        </div>
    </div>
