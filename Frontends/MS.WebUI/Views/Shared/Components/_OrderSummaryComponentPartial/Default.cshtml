@model BasketTotalDto

@{
    decimal cargoPrice = 39.99M;
}

<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">@localizer.GetKey("Sipariş Listesi", typeof(SharedResources))</h6>
        @foreach (var item in Model.BasketItems)
        {
            <div class="d-flex justify-content-between">
                <h6>@item.ProductName × @item.Quantity</h6>
                <p>@(item.Quantity * item.Price) ₺</p>
            </div>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>@localizer.GetKey("Alışveriş Tutarı", typeof(SharedResources))</h6>
            <h6>@Model.TotalPrice ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">@localizer.GetKey("Kargo Ücreti", typeof(SharedResources))</h6>
            <h6 class="font-weight-medium">@cargoPrice ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>@localizer.GetKey("Genel Toplam", typeof(SharedResources))</h5>
            <h5>@(Model.TotalPrice + cargoPrice) ₺</h5>
        </div>
    </div>
</div>