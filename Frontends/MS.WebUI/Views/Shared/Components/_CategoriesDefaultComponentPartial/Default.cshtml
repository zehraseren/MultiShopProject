@model List<ResultCategoryDto>

<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">@localizer.GetKey("ÖNE ÇIKAN KATEGORİLER", typeof(SharedResources))</span></h2>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <a class="text-decoration-none" href="">
                <div class="cat-item d-flex align-items-center mb-4">
                    <div class="overflow-hidden d-flex justify-content-center align-items-center ml-1" style="width: 100px; height: 100px;">
                        <img class="img-fluid" src="@item.ImageUrl" alt="">
                    </div>
                    <div class="flex-fill pl-3">
                        <h6>@localizer.GetKey(item.CategoryName, typeof(CategoryResources))</h6>
                    </div>
                </div>
            </a>
        </div>
        }
    </div>
</div>