@model List<ResultCommentDto>

<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@Model.Count @localizer.GetKey("Yorum", typeof(ProductDetailResources))</h4>
            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@item.ImageUrl" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px; height: 45px; border-radius: 50%;">
                    <div class="media-body">
                        <h6>@item.NameSurname<small> - <i>@item.CreatedDate.ToShortDateString()</i></small></h6>
                        <div class="text-primary mb-2">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < item.Rating)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                else
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                        </div>
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }
        </div>

        @await Html.PartialAsync("~/Views/ProductList/AddComment.cshtml", new { id = ViewBag.id, pid = ViewBag.pid })

    </div>
</div>