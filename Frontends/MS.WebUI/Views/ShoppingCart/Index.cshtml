@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_IULayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">

        @await Component.InvokeAsync("_ShoppingCartProductListComponentPartial")

        @await Component.InvokeAsync("_ShoppingCartDiscountCouponComponentPartial", new
            {
                code = ViewBag.code,
                coupon = ViewBag.coupon,
                totalWithCoupon = ViewBag.totalWithCoupon
            })

    </div>
</div>